@using Finanzas.Model
@model Finanzas.Model.VM.TransaccionVM;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Transaccion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaccion.Id" />
            <div class="form-group">
                <label asp-for="Transaccion.Fecha" class="control-label"></label>
                <input asp-for="Transaccion.Fecha" class="form-control" />
                <span asp-validation-for="Transaccion.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaccion.categoria.Id" class="control-label">Categoria:</label>
                <select asp-for="Transaccion.tipo" class="form-control">
                    <option value="E">Egreso</option>
                    <option value="I">Ingreso</option>
                </select>
                <span asp-validation-for="Transaccion.categoria.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaccion.Monto" class="control-label"></label>
                <input asp-for="Transaccion.Monto" class="form-control" />
                <span asp-validation-for="Transaccion.Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaccion.Detalle" class="control-label"></label>
                <input asp-for="Transaccion.Detalle" class="form-control" />
                <span asp-validation-for="Transaccion.Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaccion.categoria.Id" class="control-label">Categoria:</label>
                <select asp-for="Transaccion.categoria.Id" class="form-control" asp-items="@ViewBag.opciones"></select>
                <span asp-validation-for="Transaccion.categoria.Id" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

