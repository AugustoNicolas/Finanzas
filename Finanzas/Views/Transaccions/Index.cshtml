@using Finanzas.Model
@model IEnumerable<Finanzas.Model.Transaccion>

@{
    ViewData["Title"] = "Index";    
    var cuenta = ViewData["cuenta"] as Cuenta;
    var user = ViewData["user"] as Usuario;
    float tot = 0;    
    float tot2 = 0;
    foreach (var item in Model)
    {
        if (item.tipo == "E")
        { tot2 = tot2 + item.Monto; }
        else
        { tot = tot + item.Monto; }
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Bienvenido: @user.Nombre</h1>
<h2 class="text-center">Lista de transacciones</h2>

@if(cuenta.Saldo > 0)
            {
                <p class="text-center text-success"> Saldo: @cuenta.Saldo</p>
            } else
            {
                @if(cuenta.Saldo < 0)
                {
                    <p class="text-center text-danger"> Saldo: @cuenta.Saldo</p>
                }
                else
                {
                    <p class="text-center text-warning"> Saldo: @cuenta.Saldo</p>
                }
            }

<p>
    <a class="btn btn-primary" asp-action="Create">Crear nueva transaccion</a>
</p>
<div class="row">
    <div class="col-6">
        <p>Ingresos: </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Monto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Detalle)
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            @if(item.tipo == "I") {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoria.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }}
            </tbody>
        </table>
        
        <p class="text-center"> @tot</p>
    </div>
    <div class="col-6">
        
        <p>Engresos: </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Monto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Detalle)
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                    @if(item.tipo == "E")
                    {
                        
                    
                    <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoria.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }}
            </tbody>
        </table>
        
        <p class="text-center"> @tot2</p>
    </div>
</div>

